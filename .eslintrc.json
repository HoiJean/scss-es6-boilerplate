{
    "env": {
        "browser": true,
        "es6": true,
        "jquery": true,
        "node": true
    },
    "globals": {
        "Modernizr": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "comma-dangle": [
          "error",
          "never"
        ],
        "no-unused-vars": [
          "warn",
          { "vars": "local", "args": "after-used" }
        ],
        "no-console": ["error", { "allow": ["warn", "error"] }]
    }
}
